@model IEnumerable<Vidly2_0.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if(Model.Count() == 0)
{
	<p>No Customers yet.</p>
}
else
{
	<table class="table table-bordered table-hover">
		<thead>
			<tr>
				<th>Customer</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@Html.ActionLink(item.Name, "Detail", "Customers", new { id = item.Id }, null)</td>					
				</tr>
			}
		</tbody>
	</table>
}

	

